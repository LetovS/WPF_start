<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="Base">
        <Setter Property="Margin" Value="3,1"/>
    </Style>
    <Style TargetType="Button" x:Key="PrimaryBtn" BasedOn="{StaticResource Base}">
        <Setter Property="Background" Value="LightGreen"/>
    </Style>
    <Style TargetType="Button" x:Key="DangerBtn" BasedOn="{StaticResource Base}">
        <Setter Property="Background" Value="Red"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="Button" x:Key="Warning">
        <Setter Property="Margin" Value="3,1"/>
        <Setter Property="Background" Value="Yellow"/>
    </Style>
</ResourceDictionary>