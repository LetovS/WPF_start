<Window x:Class="HR_desktop_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:HR_desktop_app"
        xmlns:vm="clr-namespace:HR_desktop_app.ViewModels"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <TextBlock Text="Empty yet -)"/>
            </MenuItem>

            <MenuItem Header="Info">
                <MenuItem Header="About app."/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"></StatusBar>
        <TabControl>
            <TabItem Header="Работа с тестовыми данными">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Группы" Grid.Column="0">
                        <ListBox
                             ItemsSource="{Binding Groups}"
                             SelectedItem="{Binding SelectedGroup}"
                             SelectedIndex="0">

                        </ListBox>
                    </GroupBox>

                    <GroupBox Header="Студенты" Grid.Column="1">
                        <DataGrid ItemsSource="{Binding SelectedGroup}"
                                SelectedItem="{Binding SelectedGroup.Students}">

                        </DataGrid>
                    </GroupBox>

                    


                </Grid>
            </TabItem>
            <TabItem Header="Any themes of learn"/>
        </TabControl>
    </DockPanel>
</Window>
